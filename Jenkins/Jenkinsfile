pipeline {
    agent any

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Clonar CÃ³digo') {
            steps {
                git 'https://github.com/JavierRodriguezFontiveros/Pruebas_DataScience.git'
            }
        }

        stage('Instalar Dependencias') {
            steps {
                sh 'pip install -r Jenkins/requirements.txt'
            }
        }

        stage('Entrenar Modelo') {
            steps {
                echo 'Entrenando el modelo...'
            }
        }

        stage('Ejecutar Pruebas') {
            steps {
                echo 'Ejecutando pruebas...'
            }
        }
    }
}



